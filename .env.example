# Flask
FLASK_ENV=development
SECRET_KEY=replace-with-a-random-secret

# Database
# 开发期：如用本地 PG，请自行改为 localhost; 如用 compose 中的服务名，容器内为 db
DATABASE_URL=postgresql+psycopg2://mlogger:mlogger@db:5432/mlogger

# Uploads
# 容器内推荐 /data/uploads；本地直跑可改为绝对路径
UPLOAD_FOLDER_BASE=/data/uploads

# Logging
LOG_LEVEL=info

# Optional: Monitoring
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.0

# Optional: Redis（第 3 步会用到）
REDIS_URL=redis://redis:6379/0
